<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/delivery"
                android:layout_width="match_parent"
                android:layout_height="250dp" />
            <androidx.cardview.widget.CardView
                android:layout_margin="16dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:background="@drawable/circular_border"
                        android:padding="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:tint="@color/colorPrimaryDark"
                            android:id="@+id/titleIv"
                            android:src="@drawable/ic_account_circle_grey600_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:layout_toRightOf="@+id/titleIv"
                            android:id="@+id/titleEt"
                            android:background="@null"
                            android:hint="Title"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:padding="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/circular_border"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:tint="@color/colorPrimaryDark"
                            android:id="@+id/descIv"
                            android:src="@drawable/ic_email_grey600_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:hint="Descriptions"

                            android:layout_toRightOf="@+id/descIv"
                            android:id="@+id/descEt"
                            android:layout_marginLeft="8dp"
                            android:background="@android:color/white"
                            android:layout_width="match_parent"
                            android:layout_height="80dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:background="@drawable/circular_border"
                        android:padding="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:tint="@color/colorPrimaryDark"
                            android:id="@+id/contactIv"
                            android:src="@drawable/ic_phone_classic_grey600_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:hint="Customer Mobile No"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/contactIv"
                            android:id="@+id/contactEt"
                            android:background="@null"
                            android:textColor="#212121"
                            android:textSize="16sp"
                            android:layout_marginLeft="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:background="@drawable/circular_border"
                        android:padding="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:tint="@color/colorPrimaryDark"
                            android:id="@+id/locationIv"
                            android:src="@drawable/ic_phone_classic_grey600_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:singleLine="true"
                            android:hint="Customer Location"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/locationIv"
                            android:id="@+id/locationEt"
                            android:background="@null"
                            android:textColor="#212121"
                            android:textSize="16sp"
                            android:layout_marginLeft="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:background="@drawable/circular_border"
                        android:padding="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:tint="@color/colorPrimaryDark"
                            android:id="@+id/paymentIv"
                            android:src="@drawable/ic_phone_classic_grey600_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:singleLine="true"
                            android:hint="Click to set payment method"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/paymentIv"
                            android:id="@+id/paymentTv"
                            android:background="@null"
                            android:textColor="#212121"
                            android:textSize="16sp"
                            android:layout_marginLeft="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/circular_border"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:tint="@color/colorPrimaryDark"
                            android:id="@+id/branchIv"
                            android:src="@drawable/ic_key_variant_grey600_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:hint="Branch Name"
                            android:layout_toRightOf="@+id/branchIv"
                            android:id="@+id/branchTv"
                            android:layout_marginLeft="8dp"
                            android:background="@null"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/circular_border"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:tint="@color/colorPrimaryDark"
                            android:id="@+id/destBranchIv"
                            android:src="@drawable/ic_key_variant_grey600_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:hint="Branch Name"
                            android:layout_toRightOf="@+id/destBranchIv"
                            android:id="@+id/destBranchTv"
                            android:layout_marginLeft="8dp"
                            android:background="@null"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/circular_border"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:tint="@color/colorPrimaryDark"
                            android:id="@+id/timeIv"
                            android:src="@drawable/ic_key_variant_grey600_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="Time"
                            android:layout_toRightOf="@+id/timeIv"
                            android:id="@+id/timeTv"
                            android:textSize="16sp"
                            android:layout_marginLeft="8dp"
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/circular_border"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:tint="@color/colorPrimaryDark"
                            android:id="@+id/dateIv"
                            android:src="@drawable/ic_key_variant_grey600_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="Date"
                            android:layout_toRightOf="@+id/dateIv"
                            android:id="@+id/dateTv"
                            android:textSize="16sp"
                            android:layout_marginLeft="8dp"
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:gravity="center"
                            android:padding="16dp"
                            android:layout_margin="8dp"
                            android:text="Submit"
                            android:id="@+id/submitBtn"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_gravity="center"
                            android:background="@drawable/circular_background_blue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>


</LinearLayout>